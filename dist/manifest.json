{
  "manifest_version": 3,
  "name": "Blockchain Wallet Extension",
  "version": "1.0",
  "description": "A simple multi-chain wallet extension",
  "permissions": ["storage", "activeTab", "scripting"],
  "background": {
      "service_worker": "background.bundle.js"
  },
  "action": {
      "default_popup": "popup.html"
  }
}
